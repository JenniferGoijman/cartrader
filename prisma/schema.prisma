generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Car {
  id          Int       @id @default(autoincrement())
  name        String
  brand       String
  model       String
  price       Int
  year        Int
  city        String
  image       String
  seats       Int
  miles       Int
  features    String
  description String
  listerId    String
  messages    Message[]
}

model Message {
  id        Int    @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String
  listingId Int
  listing   Car    @relation(fields: [listingId], references: [id])
}
